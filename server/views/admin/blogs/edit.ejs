<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Edit Blog Post</h6>
  </div>
  <div class="card-body">
    <form action="/admin/blogs/<%= blog.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Blog Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required>
      </div>
      
      <div class="mb-3">
        <label for="excerpt" class="form-label">Excerpt/Summary</label>
        <textarea class="form-control" id="excerpt" name="excerpt" rows="2" placeholder="A short summary of your blog post"><%= blog.excerpt || '' %></textarea>
        <div class="form-text">This will be displayed in blog listings and previews.</div>
      </div>
      
      <div class="mb-3">
        <label for="content" class="form-label">Blog Content</label>
        <textarea class="form-control summernote" id="content" name="content" rows="10"><%= blog.content %></textarea>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="category" class="form-label">Category</label>
          <input type="text" class="form-control" id="category" name="category" value="<%= blog.category || '' %>" placeholder="e.g. Web Development, Design, Technology">
        </div>
        <div class="col-md-6">
          <label for="tags" class="form-label">Tags</label>
          <input type="text" class="form-control" id="tags" name="tags" value="<%= blog.tags || '' %>" placeholder="Separate tags with commas">
          <div class="form-text">Optional. Separate multiple tags with commas.</div>
        </div>
      </div>
      
      <div class="mb-4">
        <% if (blog.image_url) { %>
          <div class="mb-3">
            <label class="form-label">Current Featured Image</label>
            <div>
              <img src="<%= blog.image_url %>" alt="<%= blog.title %>" class="img-fluid mb-2" style="max-height: 200px; max-width: 100%;">
              <input type="hidden" name="current_image" value="<%= blog.image_url %>">
            </div>
          </div>
        <% } %>
        <label for="image" class="form-label">Change Featured Image</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*">
        <div class="form-text">Recommended image size: 1200x800 pixels. Max file size: 5MB. Leave blank to keep current image.</div>
      </div>
      
      <div class="d-flex justify-content-between">
        <a href="/admin/blogs" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save me-2"></i>Update Blog Post
        </button>
      </div>
    </form>
  </div>
</div>
