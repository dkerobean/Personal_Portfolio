            <i class="fas fa-cogs fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-2">
        <a href="/admin/services" class="text-decoration-none text-success small">View All <i class="fas fa-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Blog Posts</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= counts.blogs %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-blog fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-2">
        <a href="/admin/blogs" class="text-decoration-none text-info small">View All <i class="fas fa-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Contact Messages</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= counts.contacts %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-envelope fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-2">
        <span class="text-decoration-none text-warning small">Recent Messages</span>
      </div>
    </div>
  </div>
</div>

<!-- Recent contact submissions -->
<div class="row">
  <div class="col-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Recent Contact Submissions</h6>
      </div>
      <div class="card-body">
        <% if (recentContacts && recentContacts.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Subject</th>
                  <th>Date</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                <% recentContacts.forEach(contact => { %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.subject || 'N/A' %></td>
                    <td><%= new Date(contact.created_at).toLocaleDateString() %></td>
                    <td>
                      <% if (contact.message && contact.message.length > 50) { %>
                        <%= contact.message.substring(0, 50) %>...
                      <% } else { %>
                        <%= contact.message %>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-4">
            <i class="fas fa-inbox fa-3x text-gray-300 mb-3"></i>
            <p class="mb-0">No recent contact submissions found.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Quick links -->
